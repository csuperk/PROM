{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "node_modules/@cmuh/**/*spec.ts",
    "node_modules/@cmuh-view/**/*spec.ts"
  ],
  "include": [
    "src/main.ts",
    "src/polyfills.ts",
    "app/**/*.d.ts",
    "node_modules/@cmuh/**/*.ts",
    "node_modules/@cmuh-view/**/*.ts"
  ]
}
